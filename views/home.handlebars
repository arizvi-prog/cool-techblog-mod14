<h1>Tech Blog</h1>
<nav>
    <a href="/">Home</a>
    <a href="/dashboard">Dashboard</a>
    {{#if loggedIn}}
    <a href="/logout">Logout</a>
    {{else}}
    <a href="/login">Login</a>
    {{/if}}
</nav>

<h2>All Blog Posts</h2>
{{#each posts}}
<div>
    <h3>{{this.title}}</h3>
    <p>{{this.content}}</p>
    <a href="/post/{{this.id}}">Read more</a>
</div>
{{/each}}